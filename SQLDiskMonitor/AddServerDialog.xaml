<Window x:Class="SQLDiskMonitor.AddServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Server" Width="420" Height="360" ResizeMode="NoResize"
        Icon="app.ico"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgBrush}" FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="Display Name:" Margin="0,0,0,8"/>
        <TextBox x:Name="txtDisplayName" Grid.Row="0" Grid.Column="1" Height="26" Margin="0,0,0,8"
                 ToolTip="A friendly name for this connection (e.g. Production, Dev)"/>

        <TextBlock Grid.Row="1" Text="Server Address:" Margin="0,0,0,8"/>
        <TextBox x:Name="txtServerAddr" Grid.Row="1" Grid.Column="1" Height="26" Margin="0,0,0,8"
                 ToolTip="SQL Server hostname or IP (e.g. myserver.domain.com or 10.0.0.1\INSTANCE)"/>

        <TextBlock Grid.Row="2" Text="Authentication:" Margin="0,0,0,8"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
            <RadioButton x:Name="radWinAuth" Content="Windows" GroupName="AuthMode" IsChecked="True"
                         Checked="AuthMode_Changed" Unchecked="AuthMode_Changed"/>
            <RadioButton x:Name="radSqlAuth" Content="SQL Auth" GroupName="AuthMode" Margin="16,0,0,0"
                         Checked="AuthMode_Changed" Unchecked="AuthMode_Changed"/>
        </StackPanel>

        <TextBlock Grid.Row="3" Text="SQL Username:" Margin="0,0,0,8"/>
        <TextBox x:Name="txtSqlUser" Grid.Row="3" Grid.Column="1" Height="26" Margin="0,0,0,8" IsEnabled="False"/>

        <TextBlock Grid.Row="4" Text="SQL Password:" Margin="0,0,0,8"/>
        <PasswordBox x:Name="txtSqlPass" Grid.Row="4" Grid.Column="1" Height="26" Margin="0,0,0,8" IsEnabled="False"/>

        <TextBlock Grid.Row="5" Text="Options:" Margin="0,0,0,8"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
            <CheckBox x:Name="chkTrust" Content="Trust Certificate" IsChecked="True"/>
            <CheckBox x:Name="chkEnc" Content="Encrypt" Margin="16,0,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="6" Text="Timeout (s):" Margin="0,0,0,8"/>
        <TextBox x:Name="txtTimeout" Grid.Row="6" Grid.Column="1" Width="60" Height="26"
                 HorizontalAlignment="Left" Text="10" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Test Connection" Click="TestConnection_Click" Padding="12,6" Margin="0,0,8,0"/>
            <Button x:Name="btnSave" Content="Save" Click="Save_Click" Padding="16,6"
                    Background="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Padding="12,6"/>
        </StackPanel>
    </Grid>
</Window>
